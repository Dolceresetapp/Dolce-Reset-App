# ===========================================
# DOLCE RESET WEB ONBOARDING - Environment Variables
# ===========================================

# App URL (Railway will set this automatically, or set your custom domain)
NEXT_PUBLIC_APP_URL=https://your-app.railway.app

# ===========================================
# CLERK (Authentication)
# https://dashboard.clerk.com
# ===========================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx

# ===========================================
# SUPABASE (Database)
# https://supabase.com/dashboard
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJxxxxx
SUPABASE_SERVICE_ROLE_KEY=eyJxxxxx

# ===========================================
# STRIPE (Payments)
# https://dashboard.stripe.com
# ===========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
NEXT_PUBLIC_STRIPE_PRICE_ID=price_xxxxx

# ===========================================
# OPENAI (AI Features)
# https://platform.openai.com
# ===========================================
OPEN_API_KEY=sk-xxxxx

# ===========================================
# SUPERWALL (Paywall)
# https://superwall.com/dashboard
# ===========================================
# Your Superwall Web Checkout app URL (e.g., https://dolcereset.superwall.app)
NEXT_PUBLIC_SUPERWALL_APP_URL=https://yourapp.superwall.app
# The placement ID for the onboarding paywall
NEXT_PUBLIC_SUPERWALL_PLACEMENT_ID=onboarding_paywall
